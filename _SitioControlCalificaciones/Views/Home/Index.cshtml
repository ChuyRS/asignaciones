@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel

<center>
    <div class="container">
        <div class="ro">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-content">
                    <center>
                        <h4 class="">Inicio de sesi&oacute;n</h4>
                    </center>
                    <section>

                        <form asp-controller="Home" asp-action="Index" method="post">
                            
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="input-field col s12">
                                <label asp-for="Input.Usuario"></label>
                                <input asp-for="Input.Usuario" class="form-control" />
                                <span asp-validation-for="Input.Usuario" class="text-danger"></span>
                            </div>
                            <div class="input-field col s12">
                                <label asp-for="Input.Contraseña"></label>
                                <input asp-for="Input.Contraseña" class="form-control" />
                                <span asp-validation-for="Input.Contraseña" class="text-danger"></span>
                            </div>
                            <center>
                                <button type="submit" id="btnLogin" class="waves-effect waves-light btn">Iniciar sesi&oacute;n</button>
                            </center>
                        </form>

                    </section>
                    <br />
                    <label id="indexMessage" class="error">@Html.DisplayFor(m => m.ErrorMessage)</label>
                </div>
                   </div>
                </div>
            </div>
    </div>
</center>
@section Scripts{ 

    @await  Html.PartialAsync("_ValidationScriptsPartial")

}